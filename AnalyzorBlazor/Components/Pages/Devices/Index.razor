@page "/devices/"
@inject IDeviceService deviceService
@inject IJSRuntime js
@rendermode InteractiveServer



<PageTitle>All Devices</PageTitle>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2>Original Template List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Create New Device
            </a>
        </div>
    </div>
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%; font-size: smaller">
            <thead>
                <tr>
                    <th>Device Name</th>
                    <th>Qty laptops</th>
                    <th>Template Name</th>
                    <th>Tester Time</th>
                    <th>Serial Number</th>
                    <th>Model</th>
                    <th>Comments</th>
                    <th>Creation Date by T</th>
                    <th>Edit & Delete</th>
                    <th>Stage action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>                        
                        <td width=7%>@obj.Name
                        <div style="font-size:small"> &nbsp; @obj.Id:@obj.Stage</div></td>
                        <td width=7%>@obj.TotalCount</td>
                        <td width=7%>@obj.Template</td>
                        <td width=7%>@obj.TesterTime</td>
                        <td width=7%>@obj.SN</td>
                        <td width=7%>@obj.Model</td>
                        <td width=7%>@obj.Comments</td>
                        <td width=7%>@obj.CreateT</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
@code {
    private List<Device> Model;

    protected override async Task OnInitializedAsync()
    {
        Model = deviceService.Index();        
    }
}