@page "/tester/"
@inject IDeviceService deviceService
@inject IJSRuntime js
@inject NavigationManager navManager
@rendermode InteractiveServer



<PageTitle>Tester Devices List</PageTitle>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2>Tester Devices List</h2>
        </div>
        <div class="col-6 text-end">
            <a href="/tester/create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Create New Device By Tester
            </a>
        </div>
    </div>
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%; font-size: smaller">
            <thead>
                <tr>
                    <th>Device Name</th>
                    <th>Qty laptops</th>
                    <th>Template Name</th>
                    <th>Tester Time</th>
                    <th>Serial Number</th>
                    <th>Model</th>
                    <th>Comments</th>
                    <th>Creation Date</th>
                    <th>Update Date</th>
                    <th>Tester Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width=7%>
                            <a href="/tester/detailacc/@obj.Id" class="btn btn-success mx-2">
                                @obj.Name
                                <div style="font-size:small"> &nbsp; @obj.Id:@obj.Stage</div>
                            </a>
                        </td>
                        <td width=7%>@obj.TotalCount</td>
                        <td width=7%>@obj.Template</td>
                        <td width=7%>@obj.TesterTime</td>
                        <td width=7%>@obj.SN</td>
                        <td width=7%>@obj.Model</td>
                        <td width=7%>@obj.Comments</td>
                        <td width=7%>@obj.CreateT</td>
                        <td width=7%>@obj.UpdateT</td>
                        <td>
                        @if (obj.Stage == null || obj.Stage == Stages.Tester)
                            {
                                <div class="w075 btn-group" role="group">
                                    <a href="/tester/update/@obj.Id" class="btn btn-warning mx-2">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a href="/tester/addacc/@obj.Id" class="btn btn-success mx-2">
                                        <i class="fas fa-list"></i>
                                    </a>
                                    <button @onclick=@(() => Next(obj.Id)) class="btn btn-primary mx-2">
                                        <i class="fas fa-database"></i> To Analyzer
                                    </button>
                                    <button @onclick=@(() => Delete(obj.Id)) class="btn btn-danger mx-2">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </div>
                            }
                        </td>

                    </tr>
            }
            </tbody>
        </table>
    }
</div>
@code {
    private List<Device> Model;

    protected override async Task OnInitializedAsync()
    {
        Model = await deviceService.Get();
    }
    private async Task Delete(int deviceId)
    {
        var device = Model.First(q => q.Id == deviceId);
        var conform = await js.InvokeAsync<bool>("confirm", $"Are You Sure Want to Delete {device.Name}?");
        if (conform)
        {
            var responses = await deviceService.Delete(deviceId);
            if (responses.Success)
            {
                await OnInitializedAsync();
            }
        }
    }
    private async Task Next(int deviceId)
    {
        var device = Model.First(q => q.Id == deviceId);
        var conform = await js.InvokeAsync<bool>("confirm", $"Are You Sure Want to Send {device.Name} to Analyzer?");
        if (conform)
        {
            var responses = await deviceService.Next(deviceId, Stages.Analyser);
            if (responses.Success)
            {
                await OnInitializedAsync();
            }
        }
    }
    private async Task Accessories(int deviceId)
    {
        navManager.NavigateTo($"/tester/accessories/{deviceId}");
    }
}